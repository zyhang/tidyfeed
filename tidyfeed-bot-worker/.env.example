# TidyFeed Bot Worker Configuration
# Copy this to .env and fill in the values

# ============================================
# Backend API Connection
# ============================================
API_BASE_URL=https://api.tidyfeed.app
INTERNAL_SERVICE_KEY=your-internal-service-key-here

# ============================================
# Twitter Bot Account Credentials
# ============================================
# The bot account (e.g., @tidyfeedapp)
BOT_USERNAME=tidyfeedapp
BOT_EMAIL=bot@tidyfeed.app
BOT_PASSWORD=your-bot-password-here

# ============================================
# Cookie Persistence
# ============================================
# Path to save/load authenticated cookies
# This avoids re-login and reduces risk of challenges
BOT_COOKIES_PATH=./cookies.json

# ============================================
# Polling Settings
# ============================================
# How often to check for new mentions (in seconds)
# Recommended: 60-120 seconds to avoid rate limits
POLL_SECONDS=60

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
